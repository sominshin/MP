<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.Allforyou">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_appicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileProgramming_3"
        >
        <activity
            android:name="com.example.Allforyou.MypageActivity"
            android:exported="false" />

        <activity
            android:name="com.example.Allforyou.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name="com.example.Allforyou.SignupActivity" />
        <activity android:name="com.example.Allforyou.MainActivity"
                  android:theme="@style/Theme.AppCompat.Light.NoActionBar"  />

    </application>

</manifest>