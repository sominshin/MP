<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/etext1"
        android:layout_width="318dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="217dp"
        android:hint="닉네임 또는 이메일"
        android:inputType="textPersonName"
        android:textSize="13dp" />

    <EditText
        android:id="@+id/etext2"
        android:layout_width="318dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="265dp"
        android:layout_marginBottom="495dp"
        android:hint="비밀번호"
        android:inputType="textPersonName"
        android:textSize="13dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="318dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="331dp"
        android:layout_marginEnd="45dp"
        android:backgroundTint="#DDD3F8"
        android:elevation="20dp"
        android:text="LOGIN"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="390dp"
        android:drawableLeft="@drawable/line"
        android:drawableRight="@drawable/line"
        android:text="간편 로그인" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="318dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="420dp"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/google"
        android:elevation="20dp"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:text="구글로 시작하기"
        android:textColor="#000000" />


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="500dp"
        android:text="아이디 찾기  |" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기  |"
        android:layout_marginTop="500dp"
        android:id="@+id/text3"
        android:layout_marginStart="140dp"/>

    <TextView
        android:id="@+id/signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="238dp"
        android:layout_marginTop="500dp"
        android:text="회원가입 하기"
        android:clickable="true"
        android:focusable="true"
        />
</RelativeLayout>