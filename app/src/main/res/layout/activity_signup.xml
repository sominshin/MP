<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="28dp"
        android:text="회원가입"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/nameT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:text="닉네임*"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:elevation="5dp"
        android:hint="닉네임을 입력하세요"
        android:textSize="15sp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/emailT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:text="이메일 주소*"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:text="이메일은 이후 재설정이 불가능합니다."
        android:layout_marginBottom="5dp"
        android:textSize="10sp"/>


    <EditText
        android:id="@+id/email"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:elevation="5dp"
        android:hint="ID@example.com"
        android:padding="10dp"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/pw1T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:text="비밀번호*"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/pwmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textSize="13sp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:text="숫자, 문자, 특수문자 모두 포함 (8~15자)로 설정해주세요"
        android:layout_marginBottom="5dp"
        android:textSize="10sp"/>

    <EditText
        android:id="@+id/pw1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:elevation="5dp"
        android:textSize="15sp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/pw2T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="5dp"
        android:text="비밀번호 확인*"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/pw2"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:elevation="5dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/pwcheck"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:textSize="13sp"
            android:textStyle="bold"/>


    </LinearLayout>
    <TextView
        android:id="@+id/genderT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:text="성별*"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"/>

    <RadioGroup
        android:orientation="horizontal"
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:elevation="5dp"
        >
        <RadioButton
            android:id="@+id/radio_button_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="남자"
            />
        <RadioButton
            android:id="@+id/radio_button_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:textSize="12sp"
            android:text="여자"
            />
        <RadioButton
            android:id="@+id/radio_button_else"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="기타"
            android:textSize="12sp"
            android:layout_marginRight="19dp"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/birthT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:text="생일*"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"/>


    <Button
        android:id="@+id/birth"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:clickable="true"
        android:elevation="5dp"
        android:focusable="true"
        android:gravity="center"
        android:text="생일입력"
        android:padding="10dp"
        android:textSize="15sp"
        app:backgroundTint="#FFFFFF" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="회원가입"
        app:backgroundTint="#DDD3F8"
        app:strokeColor="#000000" />


</LinearLayout>