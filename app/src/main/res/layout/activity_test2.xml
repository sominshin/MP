<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:andorid="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity = "center"
        android:text="심리 테스트 2"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/ColortText"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:text="Color Test"
        android:layout_gravity = "center"
        android:gravity = "center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:background="@drawable/eatesttext" />

    <ImageView
        android:id="@+id/Img"
        android:layout_marginTop="18dp"
        android:layout_gravity = "center"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/color"/>

    <TextView
        android:id="@+id/ment"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity = "center"
        android:text="끌리는 색깔 4가지를 순서대로 선택하세요"
        android:textColor="#000000"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_marginLeft="50dp"
            android:id="@+id/option1"
            android:text = "1번 선택"
            android:textColor="#000000"
            android:textSize = "18sp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"/>

        <ImageView
            android:id="@+id/color1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/red"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/option1text"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text = "의미"
            android:textColor="#000000"
            android:backgroundTint="#DDD3F8"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_marginLeft="50dp"
            android:id="@+id/option2"
            android:text = "2번 선택"
            android:textColor="#000000"
            android:textSize = "18sp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"/>

        <ImageView
            android:id="@+id/color2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/green"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/optio2text"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text = "의미"
            android:textColor="#000000"
            android:backgroundTint="#DDD3F8"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_marginLeft="50dp"
            android:id="@+id/option3"
            android:text = "3번 선택"
            android:textColor="#000000"
            android:textSize = "18sp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"/>

        <ImageView
            android:id="@+id/color3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/yellow"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/option3text"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text = "의미"
            android:textColor="#000000"
            android:backgroundTint="#DDD3F8"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_marginLeft="50dp"
            android:id="@+id/option4"
            android:text = "4번 선택"
            android:textColor="#000000"
            android:textSize = "18sp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"/>

        <ImageView
            android:id="@+id/color4"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/orange"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/option4text"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text = "의미"
            android:textColor="#000000"
            android:backgroundTint="#DDD3F8"/>
    </LinearLayout>


    <Button
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결과보기"
        android:gravity = "center"
        android:layout_marginStart="135dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:backgroundTint="#DDD3F8"/>



</LinearLayout>