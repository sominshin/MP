<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MypageActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="#CDBAFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Page"
                    android:textSize="20dp"
                    android:layout_marginRight="255dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/mypgbackBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/layer_list2"
                    />

        </LinearLayout>



            <TextView
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:drawableLeft="@drawable/layer_list"
                android:layout_marginLeft="25dp"
                android:text="   이름 : 김수룡 \n   생일 : 2002.01.01 \n   성별 : 여자"
                android:lineSpacingExtra="5dp"
                android:drawablePadding="15dp"
                android:textSize="17dp"/>


            <EditText
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:backgroundTint = "#DDD3F8"
                android:hint="나의 한 줄 소개"
                android:textSize="18dp" />

            <EditText
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:backgroundTint = "#DDD3F8"
                android:hint=" MBTI"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>



    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

</LinearLayout>